# ===========================================
# API KEYS AND EXTERNAL SERVICES
# ===========================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini AI Configuration  
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_API_KEY=your_gemini_api_key_here

# Galileo AI Evaluation Platform (Optional)
# Sign up at https://www.rungalileo.io/ for advanced AI monitoring
GALILEO_API_KEY=your_galileo_api_key_here
GALILEO_PROJECT=vizbrain-thinking-graph
GALILEO_LOG_STREAM=vizbrain-chat-logs
GALILEO_CONSOLE_URL=https://app.galileo.ai
GALILEO_PROJECT_NAME=thinking-graph

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Neo4j Database Configuration
# For Neo4j AuraDB (cloud):
NEO4J_URI=neo4j+s://your_neo4j_instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# For local Neo4j instance (alternative):
# NEO4J_URI=neo4j://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=password

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Backend server port
BACKEND_PORT=8000

# Frontend server port  
FRONTEND_PORT=3000

# Flask environment
FLASK_ENV=development

# ===========================================
# OPTIONAL FEATURES
# ===========================================

# Enable/disable knowledge graph features
ENABLE_KNOWLEDGE_GRAPH=true

# Enable/disable Galileo AI monitoring
ENABLE_GALILEO_MONITORING=true

# Debug mode
DEBUG=false

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Session timeout (in seconds)
SESSION_TIMEOUT=3600

# Maximum thinking text length for processing
MAX_THINKING_LENGTH=10000

# Knowledge graph analysis depth
KG_ANALYSIS_DEPTH=3

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Secret key for sessions (generate a random string)
SECRET_KEY=your_secret_key_here

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000